<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/record_date_time"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#35a0e7"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/record_date_time_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="10dip"
            android:textColor="#000000"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="5dp" >

            <TextView
                android:id="@+id/record_phoneNum_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/record_delete_rl"
                android:layout_alignParentLeft="true"
                android:text="姓名："
                android:paddingTop="5dp"
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="20sp" />
            
            <TextView
                android:id="@+id/record_file_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/record_delete_rl"
                android:layout_alignParentLeft="true"
                android:text="文件："
                android:paddingTop="12dp"
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="20sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp" >

            <RelativeLayout
                android:id="@+id/record_delete_rl"
                android:layout_width="70dip"
                android:layout_height="35dip"
                android:background="@drawable/selector_delete_btn_bg" >

                <TextView
                    android:id="@+id/record_delete_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="删  除 "
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/record_send_rl"
                android:layout_width="70dip"
                android:layout_height="35dip"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/record_delete_rl"
                android:background="@drawable/selector_display_btn_bg" >

                <TextView
                    android:id="@+id/record_send_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="发 送 "
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/record_display_rl"
                android:layout_width="150dip"
                android:layout_height="35dip"
                android:layout_below="@id/record_delete_rl"
                android:layout_marginTop="5dp"
                android:background="@drawable/selector_display_btn_bg" >

                <TextView
                    android:id="@+id/record_display_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="显示心电波形"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>